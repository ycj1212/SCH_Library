<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:text="주소 정보"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_house_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview_address_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="집"
            android:textSize="20sp"
            android:textColor="@color/purple_700"/>

        <TextView
            android:id="@+id/textview_house_zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17345"/>

        <TextView
            android:id="@+id/textview_house_basic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기도 평택시 팽성읍 안정순환로 32번길 35-4"/>

        <TextView
            android:id="@+id/textview_house_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 주소 입니다."/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_rectal_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_house_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="직장"
            android:textSize="20sp"
            android:textColor="@color/purple_700"/>

        <TextView
            android:id="@+id/textview_rectal_zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17345"/>

        <TextView
            android:id="@+id/textview_rectal_basic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기도 평택시 팽성읍 안정순환로 32번길 35-4"/>

        <TextView
            android:id="@+id/textview_rectal_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 주소 입니다."/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>