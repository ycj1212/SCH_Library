<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_update_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:text="도서 추가"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/textview_update_book"
        app:layout_constraintBottom_toTopOf="@id/button_add_book"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도서번호"
            android:textSize="20sp"
            android:textColor="@color/purple_500"/>

        <EditText
            android:id="@+id/edittext_book_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/edittext_border"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도서명"
            android:textSize="20sp"
            android:textColor="@color/purple_500"/>

        <EditText
            android:id="@+id/edittext_book_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/edittext_border"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재고량"
            android:textSize="20sp"
            android:textColor="@color/purple_500"/>

        <EditText
            android:id="@+id/edittext_book_stock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/edittext_border"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매가"
            android:textSize="20sp"
            android:textColor="@color/purple_500"/>

        <EditText
            android:id="@+id/edittext_book_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/edittext_border"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_add_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:text="추가하기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>